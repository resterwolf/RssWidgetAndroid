<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_view_caption_style">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_view_pubDate_style">
        <item name="android:textColor">@color/color_news_pub_date</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="text_view_title_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_view_description_style">
        <item name="android:lines">3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="test" parent="Widget.AppCompat.ImageButton">
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ButtonStyle1" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_rounded_commit_button_</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonHideStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_hide_ripple_background</item>
    </style>

    <style name="ButtonSettingsStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_settings_ripple_background</item>
    </style>

    <style name="ButtonPreviousStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_left_arrow_ripple_background</item>
    </style>

    <style name="ButtonNextStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_right_arrow_ripple_background</item>
    </style>

    <style name="TextInputLayoutUrlTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">20sp</item>
        <item name="colorControlActivated">#C74646</item>
    </style>

    <style name="TextViewRecyclerViewCaption">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
